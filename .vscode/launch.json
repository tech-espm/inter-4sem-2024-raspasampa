            "windows": {
                "program": "${workspaceFolder}\\src\\app.js"
            },
            "osx": {
                "program": "${workspaceFolder}/src/app.js"
            },
            "outFiles": [
                "${workspaceFolder}/**/*.(m|c|)js",
                "!**/node_modules/**"
            ]
        }
    ]
}