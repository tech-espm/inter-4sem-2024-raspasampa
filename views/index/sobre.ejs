            margin: 0 auto;
            display: block;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .texto {
            font-family: 'Arial', Helvetica, sans-serif;
            border-radius: 1rem;
            margin-top: 1rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.8);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .scroll-trigger {
            opacity: 0;
            transition: opacity 1s, transform 1s;
            transform: translateY(20px);
        }

        .scroll-trigger.show {
            opacity: 1;
            transform: translateY(0);
        }

        .botao {
            display: inline-flex;
            width: 2rem;
            height: 2rem;
            margin: 0.5rem;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

        .botao img {
            width: 100%;
            height: 100%;
        }

        .botao:hover {
            transform: scale(1.1);
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .p-3 {
            padding: 1rem;
        }

        @media (max-width: 768px) {
            .titulo {
                font-size: 3rem;
            }

            .descricao {
                font-size: 1.2rem;
                margin-bottom: 3rem;
            }
