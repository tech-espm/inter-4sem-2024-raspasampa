            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            animation: animacao-titulo 1s ease-out;
        }

        @keyframes animacao-titulo {
            0% {
                opacity: 0;
                transform: translateY(-1.25rem);
            }

